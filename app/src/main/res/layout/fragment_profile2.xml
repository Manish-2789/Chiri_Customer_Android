<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#77000000"
    tools:context=".chiri.ActivitiesFragments.EditProfile.ProfileFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_20sdp"
    android:background="@drawable/background_white_top_corner"
    android:orientation="vertical"
    android:paddingRight="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_100sdp">
    <RelativeLayout
        android:id="@+id/rl_relative_layout"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/app_icon_no_bg"
                />

            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="Habyb Habyb"
                android:layout_toRightOf="@+id/iv_profile"
                android:textColor="@color/newColorBlack"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal"
                android:fontFamily="@font/clan_ot_narrowmedium"
                android:layout_gravity="center_vertical"
                />
        <EditText
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/tv_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="+16520209352"
            android:layout_below="@+id/tv_username"
            android:layout_toRightOf="@+id/iv_profile"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal"
            android:fontFamily="@font/clan_ot_narrowmedium"
            />
        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/ic_logout"
            />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp">
    <LinearLayout
        android:id="@+id/ll_linear_layout"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_car_image"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_maps_flags"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="Saved Location"
            android:textColor="#252736"
            android:layout_below="@+id/image_rlt"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/gilroy_light"/>
        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_arrow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_file_image"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_wallet"/>
        <TextView
            android:id="@+id/tv_document"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Chiri Wallet"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="#252736"
            android:layout_below="@+id/image_rlt"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/gilroy_light"/>
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_arrow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_credit_cards"/>
        <TextView
            android:id="@+id/tv_credit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#252736"
            android:layout_height="wrap_content"
            android:text="Credit Card "
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/gilroy_light"/>
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_arrow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_notification"/>
        <TextView
            android:id="@+id/tv_notification"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#252736"
            android:layout_height="wrap_content"
            android:text="Notification "
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/gilroy_light"/>
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_arrow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_add_image"/>
        <TextView
            android:id="@+id/tv_refer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#252736"
            android:layout_height="wrap_content"
            android:text="Refer Friends "
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/gilroy_light"/>
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_arrow"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_megaphone"/>
        <TextView
            android:id="@+id/tv_promo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#252736"
            android:layout_height="wrap_content"
            android:text="Promo"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/gilroy_light"/>

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_arrow" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:srcCompat="@drawable/ic_help"/>
        <TextView
            android:id="@+id/tv_help"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#252736"
            android:layout_height="wrap_content"
            android:text="Help "
            android:layout_marginLeft="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/gilroy_light"/>
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_arrow"/>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>

</RelativeLayout>