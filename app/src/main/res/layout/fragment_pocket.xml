<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".pocketFragment">

        <RelativeLayout
            android:background="#B4D3D3D3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@color/colorAccent"
                android:id="@+id/toolbar"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp">


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/_51sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_14sdp"
                    android:src="@drawable/ic_back_arrow"
                    android:tint="@color/newColorWhite" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:layout_toEndOf="@id/iv_back"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:text="Pocket"
                    android:textColor="@color/newColorWhite"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/clan_ot_narrowmedium"
                    android:includeFontPadding="false"
                    android:text="Step 4 of 5"
                    android:textColor="@color/light_gray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:padding="@dimen/_10sdp"
                android:layout_below="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:text="Step 4 of 5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:id="@+id/lLayoutSmall"
                            android:foreground="@drawable/receiver_selector"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/ractengle_bottom_wh_round_solid_white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/small_icon"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp" />

                            <TextView
                                android:padding="@dimen/_5sdp"
                                android:text="Small"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/_13sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="27 x 4 x 31 cm"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/_11sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:id="@+id/lLayoutMedium"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/ractengle_bottom_wh_round_solid_white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/medium_icon"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp" />

                            <TextView
                                android:padding="@dimen/_5sdp"
                                android:text="Medium"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/_13sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="29 x 6 x 33 cm"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/_11sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:id="@+id/lLayoutLarge"
                            android:padding="@dimen/_10sdp"
                            android:background="@drawable/ractengle_bottom_wh_round_solid_white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/large_icon"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp" />

                            <TextView
                                android:padding="@dimen/_5sdp"
                                android:textStyle=""
                                android:text="Large"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/_13sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="54 x 42 x 34 cm"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/_11sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:padding="@dimen/_10sdp"
                            android:id="@+id/lLayoutXlarge"
                            android:background="@drawable/ractengle_bottom_wh_round_solid_white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/xlarge_icon"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp" />

                            <TextView
                                android:padding="@dimen/_5sdp"
                                android:text="XLarge"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/_13sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="73 x 73 x 132 cm"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/_11sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cbIsFragile"
                        android:text="Fragile parcel"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_next"
                    android:padding="@dimen/_12sdp"
                    android:background="@drawable/ractengle_round_solid_primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_centerInParent="true"
                        android:text="Next"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/newColorWhite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:tint="@color/newColorWhite"
                        android:src="@drawable/ic_arrow_right"
                        android:layout_alignParentEnd="true"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>
</layout>

