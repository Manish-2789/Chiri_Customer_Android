<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newColorBackground"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_58sdp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:src="@drawable/ic_back_arrow"
            android:tint="@color/newColorBlack" />

        <TextView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:fontFamily="@font/clan_ot_narrowmedium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="Agree"
            android:textColor="@color/newColorBlack"
            android:textSize="@dimen/_11ssp"
            android:textStyle="normal" />


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="What's your email?"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/gilroy_light"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:text="We need your email address in case to restore
                            your account"
                    android:textColor="@color/newColorLightHint"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="normal" />


            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:src="@drawable/ic_mail"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>
                <LinearLayout
                    android:background="@drawable/d_bottom_et_gray_line"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/jhonalexmail">

                        <EditText
                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_28sdp"
                            android:fontFamily="@font/gilroy_bold"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:inputType="textEmailAddress"
                            android:text=""
                            android:importantForAutofill="no"
                            android:textAlignment="viewStart"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:background="@null"
                            android:textColor="@color/newColorBlack"
                            android:textColorHint="@color/newColorLightHint"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="normal"
                            tools:ignore="RtlCompat"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--<EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:fontFamily="@font/gilroy_bold"
                        android:gravity="center_vertical"
                        android:hint="@string/jhonalexmail"
                        android:includeFontPadding="false"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:importantForAutofill="no"
                        android:textAlignment="viewStart"
                        android:paddingTop="@dimen/_2sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:background="@null"
                        android:textColor="@color/newColorBlack"
                        android:textColorHint="@color/newColorLightHint"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal"
                        tools:ignore="RtlCompat" />-->


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_15sdp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_email_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/ractengle_less_round_solid_primary"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Confirm"
                android:textAllCaps="false"
                android:textColor="@color/newColorWhite"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>