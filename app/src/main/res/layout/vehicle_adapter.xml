<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:background="@drawable/white_bg"
        android:layout_marginBottom="@dimen/_20sdp">
        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus"/>
        <TextView
            android:layout_toRightOf="@+id/iv_add"
            android:layout_width="match_parent"
            android:text="Add Venicle"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="@dimen/_18sdp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/background_greay"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_scooter_image"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:padding="@dimen/_10sdp">
        <TextView
            android:id="@+id/tv_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hyundai Accent 2013"
            android:textColor="#252736"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="@dimen/_15sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_model_number"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="AX 867 EB"
                android:textColor="#818396"
                android:fontFamily="@font/gilroy_light"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_15sdp">
            </TextView>
            <ImageView
                android:id="@+id/iv_right_arrow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_right_arrow_pink"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/background_greay"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_scooter_image"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mitsubishi Lancer Evolution 2011"
            android:textColor="#252736"
            android:fontFamily="@font/gilroy_bold"
            android:textSize="@dimen/_15sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="EB 3563 EE"
                android:textColor="#818396"
                android:fontFamily="@font/gilroy_light"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_15sdp">
            </TextView>
            <ImageView
                android:id="@+id/iv_next_arrow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_right_arrow_pink"/>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>